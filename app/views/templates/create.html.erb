<div class="p-6 max-w-lg mx-auto bg-white shadow-md rounded-lg">
  <!-- Formulario para ingresar datos -->
  <%= form_with url: templates_path, method: :post, local: true, class: "space-y-6" do |form| %>
  <% end %>

  <!-- Mostrar el texto generado y botones de acción -->
  <% if @name.present? && @rut.present? %>
    <div class="mt-8 p-4 border border-gray-200 rounded-lg bg-gray-50">
      <p id="generated-text" class="text-base text-gray-800">
        correo: Yo<%= @name %> rut<%= @rut %> alumno del curso DESARROLLO RUBY ON RAILS PARA EMPRENDIMIENTOS DE TIPO STARTUP código BOTIC-SOFOF-23-30-13-0016, solicito suspensión de clases los días 28,29 y 30 de agosto.
      </p>
      <div class="mt-4 flex space-x-4">
        <button id="copy-button" class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
          Copiar al Portapapeles
        </button>
        <%= button_to 'Generar Nuevo', root_path, method: :get, class: "inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Agregar JavaScript para copiar al portapapeles -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const copyButton = document.getElementById('copy-button');
    const generatedText = document.getElementById('generated-text').innerText;

    copyButton.addEventListener('click', function() {
      navigator.clipboard.writeText(generatedText).then(function() {
        // alert('Texto copiado al portapapeles!');
      }).catch(function(err) {
        console.error('Error al copiar el texto: ', err);
      });
    });
  });
</script>
